    <!-- clicking on each card redirects to listing route  -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get the carousel element by its ID
            var carousel = document.getElementById('imageCardCarousel');

            // Get all the cards within the carousel
            var cards = carousel.querySelectorAll('.carousel-item .card');

            // Attach a click event listener to each card
            cards.forEach(function (card) {
                card.addEventListener('click', function () {
                    // Make a GET request to the /listing route
                    window.location.href = '/listing';
                });
            });
        });
    </script>