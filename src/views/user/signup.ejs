<% layout('layout/boilerplate') -%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-white bg-primary">
                    <h4 class="mb-0">Sign Up</h4>
                </div>
                <div class="card-body" style="background-color: white;">
                    <form method="post" action="/register">
                        <div class="form-group mb-3">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email">
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password">
                        </div>
                        <div class="mb-3">
                            <p>Register as</p>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="seller" value="seller">
                                <label class="form-check-label" for="seller">
                                  Seller
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="buyer" checked value="buyer">
                                <label class="form-check-label" for="buyer">
                                  Buyer
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary text-light">Sign Up</button>

                        <div class="mb-3">
                            <p>Already have an account ? <a href="/login">Login</a> </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
